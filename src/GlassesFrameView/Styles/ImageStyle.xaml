<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style TargetType="Image" x:Key="ImageStyle">
        <Style.Triggers>
			<DataTrigger Binding="{Binding IsEnabledRadius}" Value="true">
				<Setter Property="Source" Value="../Resources/GlassesFrameRoundLenses.jpg"/>
            </DataTrigger>
			<DataTrigger Binding="{Binding IsEnabledWidthLength}" Value="true">
				<Setter Property="Source" Value="../Resources/GlassesFrameRectangularLenses.jpg"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>